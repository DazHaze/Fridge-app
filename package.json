{
  "name": "firdge-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:frontend": "vite build",
    "build:server": "tsc --project server/tsconfig.json",
    "preview": "vite preview",
    "server": "tsx watch server/index.ts",
    "start": "node dist/server/index.js",
    "dev:all": "concurrently \"npm run server\" \"npm run dev\"",
    "postinstall": "npm run build:server",
    "heroku-postbuild": "npm run build:server"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.6",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongoose": "^8.19.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "typescript": "~5.9.3"
  }
}
